---
title: "Jason Data: Web Developer"
blog: exercises
pageable: true
---

<% if paginate && num_pages > 1 %>
  <div class="toppages">
    <p class="plist">
      <% if next_page %>
        <%= link_to 'Next page', next_page %>
      <% end %>

      <% if prev_page %>
        <%= link_to 'Previous page', prev_page %>
      <% end %>
      Page <%= page_number %> of <%= num_pages %>
    </p>
  </div>
<% end %>


<%= articles %>
<% pp = blog_controller(:exercises).data.local_articles %>

<% pp.each_with_index do |article, i| %>
  <section>
    <%- if article.data.feature_image %>
      <h1><%= link_to article.title, article, :class => "post_title" %></h1>
      <p class="post-date"><%= article.date.strftime('<%e %b %Y>') %></p>
      <aside>
        <%- link_to article do %>
          <%= image_tag article.data.feature_image, resize_to: '200x200', class: 'thumbnail' %>
        <% end %>
      </aside>
      <article>
        <%= article.data.summary %>
      </article>
    <% else %>
      <h1><%= link_to article.title, article, :class => "post_title" %></h1>
      <p class="post-date"><%= article.date.strftime('<%e %b %Y>') %></p>
      <%= article.summary %>
    <% end %>
  </section>
<% end %>

<% if paginate && num_pages > 1 %>
  <div class="bottompages">
    <p class="plist">
      <% if next_page %>
        <%= link_to 'Next page', next_page %>
      <% end %>

      <% if prev_page %>
        <%= link_to 'Previous page', prev_page %>
      <% end %>
      Page <%= page_number %> of <%= num_pages %>
    </p>
  </div>
<% end %>
