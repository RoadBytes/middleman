<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "JasonData" %></title>

    <%= partial "partials/favicon" %>

    <%= stylesheet_link_tag "normalize", "all" %>
    <%= javascript_include_tag  "all" %>
  </head>

  <body class="<%= page_classes %> main">
   <%= partial "partials/nav" %>
   <div class="content">
     <div class="post">
       <%- if current_page.data.feature_image %>
          <%= image_tag current_page.data.feature_image, class: "post__feature-image" %>
       <% end %>
       <h1 class="post__title"><%= current_page.data.title || "Blog Post" %></h1>
       <p class="post__date"><%= current_page.date.strftime('<%e %b %Y>') %></p>
       <p>
         <% current_page.tags.each do |tag| %>
           <%= link_to tag, tag_path(tag), class: "post__tag" %>
         <% end %>
       </p>
       <hr/> <%= yield %>
       <%= partial "partials/footer" %>
     </div>
   </div>
   <%= partial "partials/analytics" %>
  </body>
</html>
