---
title: "Jason Data: Web Developer"
blog: personal
pageable: true
---

<% if paginate && num_pages > 1 %>
  <div class="toppages">
    <p class="plist">
      <% if next_page %>
        <%= link_to 'Next page', next_page %>
      <% end %>

      <% if prev_page %>
        <%= link_to 'Previous page', prev_page %>
      <% end %>
      Page <%= page_number %> of <%= num_pages %>
    </p>
  </div>
<% end %>

<% page_articles.each_with_index do |article, i| %>
  <section class="listed-post">
    <%- if article.data.feature_image %>
      <h1 class="listed-post__title"><%= link_to article.title, article %></h1>
      <p class="listed-post__date"><%= article.date.strftime('<%e %b %Y>') %></p>
      <aside>
        <%- link_to article do %>
          <%= image_tag article.data.feature_image, resize_to: '200x200', class: 'thumbnail' %>
        <% end %>
      </aside>
      <article>
        <%= article.data.summary %>
      </article>
    <% else %>
      <h1 class="listed-post__title"><%= link_to article.title, article %></h1>
      <p class="listed-post__date"><%= article.date.strftime('<%e %b %Y>') %></p>
      <div class="listed-post__summary"><%= article.summary %></div>
    <% end %>
  </section>
<% end %>

<% if paginate && num_pages > 1 %>
  <div class="bottompages">
    <p class="plist">
      <% if next_page %>
        <%= link_to 'Next page', next_page %>
      <% end %>

      <% if prev_page %>
        <%= link_to 'Previous page', prev_page %>
      <% end %>
      Page <%= page_number %> of <%= num_pages %>
    </p>
  </div>
<% end %>
